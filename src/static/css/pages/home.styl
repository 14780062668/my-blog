.blog-list
	width 68%
	.title
		background #fff
		border 1px solid #eaeaea
		border-radius 4px
		padding 10px 20px 20px
		margin-bottom 20px
		h2
			border-left 5px solid color-main
			padding-left 10px
	.list-box
		border 1px solid #eaeaea
		border-radius 4px
		li
			background #fff
			padding 20px
			overflow hidden
			&:nth-child(n+2)
				border-top 1px solid #eaeaea
			.list-img
				width 220px
				margin-right 10px
			.list-msg
				width calc(100% - 230px)
				h3
					margin-bottom 10px
				i
					margin-right 2px
				.meta
					color #999
					font-size font-size-samll
					margin-bottom 10px
					span
						margin-right 20px
					time
						margin-right 20px
					a
						color #999
				.note
					color #999
					word-wrap break-word
.hot-tag-box
	width 30%
	background #fff
	border 1px solid #eaeaea
	border-radius 4px